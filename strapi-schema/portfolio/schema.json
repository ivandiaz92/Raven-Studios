{
  "kind": "collectionType",
  "collectionName": "portfolios",
  "info": {
    "singularName": "portfolio",
    "pluralName": "portfolios",
    "displayName": "Portfolio",
    "description": "Projects to display on the site"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "shortDescription": {
      "type": "string",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true
    },
    "technologies": {
      "type": "json",
      "required": false
    },
    "projectUrl": {
      "type": "string",
      "required": false
    },
    "githubUrl": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "enumeration",
      "enum": ["Web Development", "Mobile App", "Design", "Other"],
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
